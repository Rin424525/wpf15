<Page x:Class="WpfApp15.Pages.EditSpecialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15.Pages" xmlns:viewmodels="clr-namespace:WpfApp15.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ViewSpecialsVM}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSpecialPage">
    <StackPanel>
        <StackPanel DataContext="{Binding EditSpecial}">
            <Label Content="Название"/>
            <TextBox Text="{Binding Title}"/>
            
        </StackPanel>
        
        <Button Content="Сохранить" Command="{Binding SaveSpecial}"/>
    </StackPanel>
</Page>
